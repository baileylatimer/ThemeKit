<section class="{{ background_color }}  radius-md overflow-hidden padding-component cta-banner" {% if dark_theme != blank %}data-theme="dark-1"{% endif %} {% if button1_url != blank %} onclick="window.open('{{ button1_url }}', {% if section.settings.hero_external %} '_blank' {% else %} '_self'{% endif %})" {% endif %}>
  <div class="grid gap-md items-center">
    <div class="col-6@md reveal-fx reveal-fx--translate-left">
      <div class="padding-left-md@lg">
        <div class="text-component">
          {% if overline != blank %}
          <p class="opacity-70% text-uppercase margin-bottom-xxs">{{ overline }}</p>
          {% endif %}
          <h2 class="mt0"> {{ title }}</h2>
          <p class="text-md">{{ description }}</p>
        </div>
    
        <div class="margin-top-sm">
          <div class="flex flex-wrap gap-sm items-center">
            <a {% if button1_url != blank %}href="{{ button1_url }}"{% endif %} class="btn {% if btn_type != blank %} {{ btn_type }} {% endif %}">{{ button1 }}&nbsp;âžž</a>
          </div>
        </div>
      </div>
    </div>
  
    <div class="col-6@md reveal-fx reveal-fx--translate-right">
      <figure class="width-100%">
        <img class="block width-100%" src="{{ image |  img_url: '600x' }}" alt="{{ title }}">
      </figure>
    </div>
  </div>
</section>


  
  
