<!DOCTYPE html>
<html lang="{{ locale }}" dir="{{ direction }}" class="{{ checkout_html_classes }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, height=device-height, minimum-scale=1.0, user-scalable=0">
    <meta name="referrer" content="origin">
    <script src="{{ 'jquery.min.js' | asset_url }}"></script>
    <title>{{ page_title }}</title>

    {{ content_for_header }}

    {{ checkout_stylesheets }}
    {{ checkout_scripts }}
  
  {% render 'shogun-head' %}
</head>
  <body>
    {{ skip_to_content_link }}

    <header class="banner" data-header role="banner">
      <div class="wrap">
        {{ content_for_logo }}
      </div>
    </header>

    {{ order_summary_toggle }}
    <div class="content" data-content>
      <div class="wrap">
        <div class="main">
          <header class="main__header" role="banner">
            {{ content_for_logo }}
            {{ breadcrumb }}
            {{ alternative_payment_methods }}
          </header>
          <main class="main__content" role="main">
            {{ content_for_layout }}
          </main>
          <footer class="main__footer" role="contentinfo">
            {{ content_for_footer }}
          </footer>
        </div>
        <aside class="sidebar" role="complementary">
          <div class="sidebar__header">
            {{ content_for_logo }}
          </div>
          <div class="sidebar__content">
            {{ content_for_order_summary }}

          </div>
        </aside>
      </div>
    </div>
    {{ 'checkout-util.scss' | asset_url | stylesheet_tag }} <!-- Utility classes -->
    {{ 'checkout.scss' | asset_url | stylesheet_tag }} <!-- Checkout specific classes -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Material+Icons|Material+Icons+Outlined|Material+Icons+Two+Tone|Material+Icons+Round|Material+Icons+Sharp" as="font" type="text/css" >
    
    <script>
        $(document).on(`page:load page:change`, function() { // Handle page switching
            document.querySelector('img[alt="GoSun"]').setAttribute('src', '//cdn.shopify.com/s/files/1/0789/1333/files/Primary_Dark.svg?v=1597346290'); // Change logo to SVG
            var valueProp = document.createElement('section');  // Create with DOM
                valueProp.innerHTML = "<div class='border-top border-2 width-100\% cart__gift bg-contrast-lower radius-md padding-md inline-flex flex-column items-left margin-y-xl'>" +   
                    "<h4 class='margin-bottom-sm'> The perks of every order</h4>" +         
                    "<div class='inline-flex color-contrast-medium margin-bottom-xxs'>" + 
                    "<i class='icon--sm margin-right-xxs material-icons-outlined color-contrast-low'>verified_user</i>" + 
                    "<p>1-year warranty</p>" + 
                   "</div>" + 
                    "<div class='inline-flex color-contrast-medium margin-bottom-xxs'>" + 
                    "<i class='icon--sm margin-right-xxs material-icons-outlined color-contrast-low'>local_shipping</i>" + 
                    "<p>Free shipping & returns</p>" + 
                    "</div>" + 
                    "<div class='inline-flex color-contrast-medium margin-bottom-xxs'>" + 
                    "<i class='icon--sm margin-right-xxs material-icons-outlined color-contrast-low'>lock</i>" + 
                    "<p>SSL secured checkout</p>" + 
                    "</div>" + 
                "</div>";
            document.querySelector("div[data-order-summary-section='payment-lines']").append(valueProp); // Append to payment section
        });
    </script>


